{% comment %} create div.container and put the below code inside {% endcomment %}

<div class="container">
  {% paginate collection.products by 2 %}
    {% comment %} add a div.row and put the h1 inside {% endcomment %}
    <div class="row my-5">
      <h1 class="text-center">{{ collection.title }}</h1>
    </div>

    {% comment %} product filters {% endcomment %}
    <div class="row justify-content-center">
      <select
        name="sorting"
        class="form-select form-select-sm w-25"
        id="sort_by">
          {% for option in collection.sort_options %}
            <option value="{{option.value}}">
              
          {% comment %} get filtered value to stick {% endcomment %}
          {% if option.value == collection.sort_by %} selected
            
          {% endif %}
          {{option.name}}
            </option>
            
          {% endfor %}
        </select>
    </div>

    {% comment %} move code within div.row {% endcomment %}
    <div class="row justify-content-center my-5">
      {% for product in collection.products %}
        {% comment %} copy below code from templates/featured-collection.liquid {% endcomment %}
        {% assign image = product.featured_media.preview_image %}
        {% comment %} create div.col-3 {% endcomment %}
        <div class="col-3 g-2">

          {% comment %} copy below code from templates/featured-collection.liquid {% endcomment %}
          <div class="card" style="width: 18rem;">
            {% if image != blank %}
              <img
                class="card-img-top"
                src="{{ image | img_url:'450x' }}"
                alt="{{ product.title }}">
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'card-img-top' }}
            {% endif %}

            <div class="card-body">
              <h3>
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              <p>{{ product.price | | money_without_trailing_zeros }}</p>
            </div>
          </div>
        </div>

        {% comment %} delete code {% endcomment %}
        {% comment %} <div>
        <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
        {{ product.price | money }}
        {% unless product.available %}<br><strong>sold out</strong>
        {% endunless %}
        <a href="{{ product.url | within: collection }}">
        <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}">
        </a>
        </div> {% endcomment %}
      {% else %}
        <p>no matches</p>
      {% endfor %}
    </div>


    {% if paginate.pages > 1 %}
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          {% if paginate.previous.is_link %}
            <li class="page-item">
              <a href="{{ paginate.previous.url }}" class="page-link">{{ paginate.previous.title }}</a>
            </li>
          {% endif %}

          {% comment %} update numbers {% endcomment %}
          {% for part in paginate.parts %}
            {% if part.is_link %}
              <li class="page-item">
                <a href="{{ part.url }}" class="page-link">{{ part.title }}</a>
              </li>
            {% else %}
              <li class="page-item disabled">
                <a href="{{ part.url }}" class="page-link">
                  {{ part.title }}
                </a>
              </li>
            {% endif %}
          {% endfor %}

          {% if paginate.next.is_link %}
            <li class="page-item">
              <a href="{{ paginate.next.url }}" class="page-link">{{ paginate.next.title }}</a>
            </li>
          {% endif %}
        </ul>
      </nav>
    {% endif %}
  {% endpaginate %}
</div>